{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "useNx": true,
  "version": "4.0.0-rc.1",
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "master",
        "feat/*",
        "fix/*",
        "chore/*",
        "feat!/*"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "Release %s",
      "tagVersionPrefix": ""
    }
  }
}
